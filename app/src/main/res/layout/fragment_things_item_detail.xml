<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

<LinearLayout
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
      >

    <com.daimajia.slider.library.SliderLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:id="@+id/things_item_detail_slider_layout"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="start"
        android:text="你的笑我真是喜欢看"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:textColor="#f00"
        android:text="168"/>

    <View
        android:layout_width="fill_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_launcher"/>

        <RelativeLayout
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="36dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="matthew"
                android:textColor="#99ff0000"
                android:id="@+id/things_item_detail_user_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/things_item_detail_user_name"
                android:text="推荐"
                android:textColor="#77000000"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#77000000"
                android:layout_below="@+id/things_item_detail_user_name"
                android:text="2014-11-20"/>

            </RelativeLayout>

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喜欢 519"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/small_text_view_border"
            android:id="@+id/things_item_detail_number_of_likes"
            />

        <TextView
            android:layout_toRightOf="@id/things_item_detail_number_of_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="16dp"
            android:text="加入豆列 329"
            android:background="@drawable/small_text_view_border"
            android:id="@+id/things_item_detail_number_of_add_to_dou_list"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去购买"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/things_item_detail_buy_now"
            android:background="#f00"/>
        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#fff"
        android:divider="@drawable/list_view_divider"
        android:dividerHeight="1dp"
        android:id="@+id/things_item_detail_list_view"></ListView>

    <TextView
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="猜你喜欢的东西"/>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="2000dp"
        android:layout_margin="16dp"
        android:numColumns="2"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="16dp"
        android:stretchMode="columnWidth"
        android:id="@+id/things_item_detail_grid_view"
        ></GridView>





</LinearLayout>

</ScrollView>